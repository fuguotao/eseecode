function hideAll() {
	repeat (8) {
		hide(repeatCount + 2)
	}
}

function up() {
	if (getLayerVisibility(6)) {
		hideAll()
		show(7)
	} else {
			hideAll()
			show(6)
	}
}

function down() {
	if (getLayerVisibility(8)) {
		hideAll()
		show(9)
	} else {
			hideAll()
			show(8)
	}
}

function right() {
	if (getLayerVisibility(2)) {
		hideAll()
		show(3)
	} else {
			hideAll()
			show(2)
	}
}

function left() {
	if (getLayerVisibility(4)) {
		hideAll()
		show(5)
	} else {
			hideAll()
			show(4)
	}
	show(1)
}

